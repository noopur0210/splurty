<table>
    <thead>
        <tr>
            <th>Saying</th>
            <th>Author</th>
        </tr>
    </thead>
    <%= for q <- @quotes do %>
        <tr>
            <td>
                <%= link q.saying, to: Routes.quote_path(@conn, :show, q.id) %>
            </td>
            <td>
                <%= q.author %>
            </td>
        </tr>
    <% end %>
</table>